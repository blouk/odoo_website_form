<odoo>
    <report id="movie_report" model="movie" string="Movies" report_type="qweb-pdf" name="website_movie.report_movie" file="website_movie.report_movie" attachment_use="False"/>

    <template id="report_movie">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.external_layout">
                    <div class="page">
                        <h2>Report title</h2>
                        <p>This object's name is
                            <span t-field="o.name"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
